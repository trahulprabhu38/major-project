# CO Generator Service Environment Variables

# Service Configuration
PORT=8085
LOG_LEVEL=INFO
ALLOW_RESET=true

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=edu
POSTGRES_USER=admin
POSTGRES_PASSWORD=password

# ChromaDB
CHROMA_HOST=chromadb
CHROMA_PORT=8000
CHROMA_COLLECTION=syllabus_contexts

# Groq API
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Generation Defaults
DEFAULT_RETRIEVAL_K=6
DEFAULT_SEED=42
DEFAULT_TEMPERATURE=0.3

# Chunking
CHUNK_SIZE=400
CHUNK_OVERLAP=80
