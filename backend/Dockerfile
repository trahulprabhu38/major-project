# ---- Build stage ----
FROM golang:1.23 AS builder
ENV GOTOOLCHAIN=auto

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o server .

# ---- Run stage ----
FROM gcr.io/distroless/base-debian12
WORKDIR /app
COPY --from=builder /app/server .

# Expose backend port
EXPOSE 8080

CMD ["./server"]
